<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="358dp"
    android:layout_height="150dp"
    android:orientation="horizontal"
    android:background="@android:color/transparent">

    <ImageView
        android:id="@+id/widget_image"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:src="@drawable/saveforfuture"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/fab_margin"
        android:gravity="center">

        <TextView
            android:id="@+id/widget_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fab_margin"
            android:textSize="@dimen/text_margin"
            android:textAlignment="center"
            android:text="Registra siempre tus gastos ¡Siempre puedes ahorrar más que ayer!" />

        <Button
            android:id="@+id/widget_add"
            android:layout_marginTop="@dimen/fab_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@color/colorPrimary"
            android:text="Ingresar nuevo gasto"/>


    </LinearLayout>

</LinearLayout>
