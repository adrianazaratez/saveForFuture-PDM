<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.adriana.piggybank_moviles.ActivityMetaDetail">


    <com.mikhaellopez.circularprogressbar.CircularProgressBar
        android:id="@+id/meta_detail_progressbar"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentTop="false"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="130dp"
        android:layout_marginTop="18dp"
        app:background_progressbar_color="#FFCDD2"
        app:background_progressbar_width="5dp"
        app:progressbar_color="#F44336"
        app:progressbar_width="10dp" />

    <TextView
        android:id="@+id/meta_detail_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/meta_detail_progressbar"
        android:hint="Nombre meta"
        android:textSize="30dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/meta_detail_metaA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/meta_detail_title"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="14dp"
        android:text="Meta de ahorro:"
        android:textSize="20dp"
        android:textColor="#000000"
    />

    <TextView
        android:id="@+id/meta_detail_cantidadMeta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/meta_detail_title"
        android:layout_toRightOf="@+id/meta_detail_metaA"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="42dp"
        android:hint="$"
        android:textSize="20dp"

        />

    <TextView
        android:id="@+id/meta_detail_Ahorro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/meta_detail_metaA"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="14dp"
        android:text="Cantidad ahorrada:"
        android:textSize="20dp"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/meta_detail_cantidadAhorro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/meta_detail_metaA"
        android:layout_toRightOf="@+id/meta_detail_Ahorro"
        android:layout_marginLeft="14dp"
        android:hint="$"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/meta_detail_fecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/meta_detail_Ahorro"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="14dp"
        android:text="Fecha lÃ­mite ahorro:"
        android:textSize="20dp"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/meta_detail_fechaLim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/meta_detail_Ahorro"
        android:layout_toRightOf="@+id/meta_detail_fecha"
        android:layout_marginLeft="14dp"
        android:hint="dd/mm/yy"
        android:textSize="20dp"
        />

</RelativeLayout>
