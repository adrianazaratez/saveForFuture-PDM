<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_margin="5dp"
    android:scrollbarStyle="outsideOverlay"
    card_view:cardCornerRadius="4dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <ImageView
            android:id="@+id/item_meta_image"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/nuevameta"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/item_meta_image"
            android:layout_marginStart="20dp"
            android:layout_marginTop="29dp"
            android:layout_toEndOf="@+id/item_meta_image"
            android:textSize="20dp"
            android:id="@+id/item_meta_name" />

        <TextView
            android:id="@+id/item_meta_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/item_meta_name"
            android:layout_below="@+id/item_meta_name"
            android:layout_marginEnd="48dp"
            android:layout_marginTop="14dp"
            android:textSize="40dp" />


    </RelativeLayout>
</android.support.v7.widget.CardView>
