<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_margin="5dp"
    android:scrollbarStyle="outsideOverlay"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:id="@+id/item_gasto_layout"
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <ImageView
            android:id="@+id/item_gasto_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/itemgasto"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:textSize="15dp"
            android:text="ITEM GASTO"
            android:layout_toEndOf="@+id/item_gasto_image"
            android:id="@+id/item_gasto_name" />

        <TextView
            android:id="@+id/item_gasto_progressBar"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Cantidad"
            android:layout_marginStart="70dp"
            android:layout_marginTop="35dp"
            android:layout_toEndOf="@+id/item_gasto_name" />
    </RelativeLayout>

</android.support.v7.widget.CardView>