<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="60dp"
    android:background="#FFFFFF"
    tools:context="com.example.adriana.piggybank_moviles.ActivityMain">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="310dp"
        android:src="@drawable/saveforfuture"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
    <EditText
        android:id="@+id/activity_main_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Usuario"
        android:textColorHint="#333333"
        android:inputType="none"
        android:background="#DDDDDD"
        android:paddingHorizontal="10dp"
        android:drawableLeft="@android:drawable/ic_lock_idle_lock"
        android:layout_marginBottom="10dp"
        />

    <EditText
        android:id="@+id/activity_main_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contraseña"
        android:textColorHint="#333333"
        android:inputType="textWebPassword"
        android:background="#DDDDDD"
        android:paddingHorizontal="10dp"
        android:drawableLeft="@android:drawable/ic_lock_idle_lock" />

    <TextView
        android:id="@+id/activity_main_forgotPWD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Olvidé mi contraseña"
        android:textColor="#AAAAAA"
        android:paddingBottom="10dp"
        android:paddingTop="5dp"
        android:layout_marginBottom="5dp"/>

    <Button
        android:id="@+id/activity_main_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Iniciar sesión"
        android:textSize="20dp"
        android:background="@color/colorButtons"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/activity_main_newAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿No tienes una cuenta?"
        android:textSize="17dp"
        android:textColor="#AAAAAA"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/activity_main_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear perfil"
        android:textColor="#888888"
        android:background="@android:color/transparent"/>
    </LinearLayout>

</LinearLayout>
