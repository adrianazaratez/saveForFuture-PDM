<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme"
    android:gravity="center"
    android:paddingHorizontal="40dp"
    android:paddingTop="20dp"
    android:background="#FFFFFF"
    android:orientation="horizontal">

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="  NUEVA META  "
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"/>

    <Spinner
        android:id="@+id/activity_newgoals_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/goals"
        android:tag="Tipo de Meta"
        android:layout_marginBottom="10dp">
    </Spinner>

    <EditText
        android:id="@+id/activity_newgoals_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre"/>

    <EditText
        android:id="@+id/activity_newgoals_quantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cantidad"/>

        <Button
            android:id="@+id/activity_newgoals_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OK"/>

        </LinearLayout>

    <CalendarView
        android:id="@+id/acivity_newgoals_date"
        android:layout_width="match_parent"
        android:layout_height="230dp"></CalendarView>


</LinearLayout>